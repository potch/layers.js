{
  "name": "@potch/layers",
  "version": "0.0.1",
  "description": "use html canvas as if it's a layered image editor",
  "main": "layers.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "npm run build && serve",
    "build": "npm run build:rollup && npm run build:minify",
    "build:rollup": "rollup layers.js --file layers-nomodule.js --format iife --name Layers",
    "build:minify": "terser --mangle -- layers-nomodule.js > layers.min.js"
  },
  "repository": {
    "type": "git",
    "url": "https://api.glitch.com/git/layers-library"
  },
  "homepage": "https://layers-library.glitch.me/",
  "keywords": [
    "library",
    "canvas",
    "drawing"
  ],
  "author": "Potch",
  "license": "ISC",
  "devDependencies": {
    "serve": "^11.2.0",
    "rollup": "^1.12.5",
    "terser": "^4.3.8"
  }
}